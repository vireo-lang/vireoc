---
BasedOnStyle: LLVM
IndentWidth: 4
UseTab: Never
BreakBeforeBraces: Custom
BraceWrapping:
  AfterFunction: false       # Opening brace on same line for functions
  AfterControlStatement: false  # Same line for if, for, while
  AfterClass: false
  AfterNamespace: false
  BeforeCatch: false
  BeforeElse: false
  IndentBraces: false
