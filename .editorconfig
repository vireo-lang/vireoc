# EditorConfig is awesome: https://editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

[*.{c,cpp,h,hpp}]
indent_style = tab
indent_size = 2
max_line_length = 80

[Makefile*]
indent_style = tab
indent_size = 2
max_line_length = 80

[*.{md,txt}]
indent_style = space
indent_size = 2
max_line_length = off

